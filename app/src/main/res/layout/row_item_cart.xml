<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen10dp">

    <TextView
        android:id="@+id/cart_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_medium"
        android:text="Make your own package"
        android:textColor="@color/hintColor"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/cart_close_icon_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_close_24" />

    <TextView
        android:id="@+id/cart_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_title_tv"
        android:layout_marginTop="@dimen/dimen10dp"
        android:fontFamily="@font/lexend_regular"
        android:textColor="@color/colorSubHeading"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_description_tv"
        android:layout_marginTop="@dimen/dimen20dp">

        <LinearLayout
            android:id="@+id/item_spec_opt_qty_ll"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_border_round"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen10dp"
            android:paddingBottom="@dimen/dimen10dp">

            <ImageView
                android:id="@+id/spec_qty_minus_iv"
                android:layout_width="@dimen/dimen10dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/baseline_remove_24" />

            <TextView
                android:id="@+id/spec_qty_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:fontFamily="@font/lexend_regular"
                android:textAlignment="center"
                android:textColor="@color/hintColor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/spec_qty_plus_iv"
                android:layout_width="@dimen/dimen10dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/baseline_add_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/cart_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lexend_medium"
            android:textColor="@color/hintColor"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>
