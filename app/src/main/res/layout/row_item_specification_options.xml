<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/item_spec_opt_checkbox_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_spec_opt_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/item_spec_opt_qty_ll"
        android:layout_toEndOf="@id/item_spec_opt_checkbox_cb"
        android:fontFamily="@font/lexend_regular"
        android:text="Name Here"
        android:textColor="@color/hintColor"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/item_spec_opt_qty_ll"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/item_spec_opt_price_tv"
        android:background="@drawable/bg_border_round"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen10dp"
        android:paddingBottom="@dimen/dimen10dp">

        <ImageView
            android:id="@+id/spec_qty_minus_iv"
            android:layout_width="@dimen/dimen10dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/baseline_remove_24" />

        <TextView
            android:id="@+id/spec_qty_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/lexend_regular"
            android:textAlignment="center"
            android:textColor="@color/hintColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/spec_qty_plus_iv"
            android:layout_width="@dimen/dimen10dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_spec_opt_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/lexend_bold"
        android:text="Rs.999/-"
        android:textColor="@color/hintColor"
        android:textSize="12sp" />


</RelativeLayout>